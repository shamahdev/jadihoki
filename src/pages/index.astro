---
import Layout from '../layouts/Layout.astro'
import Navbar from '../components/Navbar.astro'
import { DownloadButton } from '../components/DownloadButton.jsx'
import { TermTab } from '../components/TermTab.jsx'
import { Image } from '@astrojs/image/components'
import Footer from '../components/Footer.astro'
import { Icon } from 'astro-icon'

import differenceInDays from 'date-fns/differenceInDays/index.js'

const day = differenceInDays(new Date(2022, 10, 30), new Date(Date.now()))
---

<Layout title="Hibah Kompetisi Kewirausahaan 2.0 #CiptakanPeluang">
  <Navbar />
  <div class="bg-primary text-white flex py-40 w-full justify-center px-3 pt-32">
    <div class="max-w-screen-xl flex flex-col lg:flex-row justify-between w-full items-center gap-6">
      <div class="flex flex-col gap-6 max-w-lg">
        <Image src={import('../assets/images/hokilogo.png')} alt="Hoki 2.0" height={110} width={270} />
        <h1 class="text-3xl font-bold">Hibah Kompetisi Kewirausahaan 2.0 #CiptakanPeluang</h1>
        <a href="https://forms.gle/eg22qWGPqsrqcs1NA" class="py-4 px-8 rounded-xl bg-secondary text-tertiary w-fit font-semibold">Daftar Sekarang</a>
      </div>
      <Image src={import('../assets/images/art.png')} alt="Jumbotron" height={400} width={480} />
    </div>
  </div>

  <div class="bg-neutral-100 flex w-full justify-center px-6">
