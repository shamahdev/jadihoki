    <div class="max-w-screen-xl flex flex-col md:flex-row justify-between w-full py-6 gap-6 relative">
      <div class="flex gap-3 w-full p-5 bg-white rounded-2xl shadow-lg h-fit">
        <div class="bg-primary p-3 h-fit rounded-full">
          <div class="w-6 h-6 text-white">
            <Icon name="ic:round-attach-money" />
          </div>
        </div>
        <div class="flex flex-col gap-1 min-h-[110px] h-fit">
